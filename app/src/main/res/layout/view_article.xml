<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@android:drawable/picture_frame"
            android:id="@+id/profile_image_view"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
    <TextView
            android:text="記事タイトル"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_text"
            android:maxLines="2"
            android:ellipsize="end" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/profile_image_view" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:textColor="@android:color/black"/>
    <TextView
            android:text="ユーザー名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_name_text" app:layout_constraintStart_toEndOf="@+id/profile_image_view"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/title_text"
            android:textColor="@android:color/black"/>
</android.support.constraint.ConstraintLayout>